{
  "name": "@waymark/cli",
  "version": "0.1.0",
  "description": "Command-line interface for searching and managing waymarks in codebases",
  "type": "module",
  "bin": {
    "waymark": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@waymark/core": "workspace:*",
    "@waymark/formatters": "workspace:*",
    "@waymark/types": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^12.0.0",
    "globby": "^14.1.0"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch"
  }
}