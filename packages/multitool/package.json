{
  "name": "@waymarks/multitool",
  "version": "0.1.0",
  "private": true,
  "description": "CLI multitool for Waymark project maintenance, linting, and migration.",
  "author": "Waymarks",
  "license": "MIT",
  "type": "module",
  "bin": {
    "wm": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "cp src/lib/waymark-spec.json dist/lib/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "wm": "node dist/index.js",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 