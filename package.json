{
  "name": "waymark",
  "version": "0.2.0",
  "description": "Comment Waymarks: Inline References & Notes - Making codebases discoverable",
  "keywords": [
    "waymark",
    "code-navigation",
    "ai-navigation",
    "documentation",
    "developer-tools",
    "ripgrep",
    "code-search",
    "comment-waymarks"
  ],
  "homepage": "https://github.com/galligan/waymark#readme",
  "bugs": {
    "url": "https://github.com/galligan/waymark/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galligan/waymark.git"
  },
  "license": "MIT",
  "author": "Matt Galligan",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --filter ./packages/* run dev",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "waymark lint",
    "typecheck": "tsc -b",
    "clean": "rm -rf dist && pnpm -r exec rm -rf dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prerelease": "pnpm test && pnpm typecheck",
    "prepare": "husky",
    "ci:local": "pnpm run ci:validate && echo '✅ All CI checks passed locally!'",
    "ci:validate": "pnpm test && pnpm typecheck && pnpm build",
    "check:all": "pnpm ci:validate && pnpm run check:waymarks",
    "check:waymarks": "echo '🔍 Checking for temporary waymarks...' && ! rg '::: (tmp|temp)' --type ts --type js packages/ || (echo '❌ Found temporary waymarks!' && exit 1)"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chalk": "^5.4.1",
    "eslint": "^8.56.0",
    "globby": "^14.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "minimatch": "^10.0.3",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@9.4.0",
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
